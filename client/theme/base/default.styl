$m-font-face('Muller', '/static/fonts/Mullernarrowextrabold');

html {
  font-size $v-base-size;
  color: $c-text;
}

body {
  margin 0;
  overflow-x: hidden;
  position relative;
  font-family: Muller, arial, sans-serif;
}

ul {
  list-style-type: none;
  padding: 0;
  margin: 0;
}

:global {
  html, body, #app {
    min-height 100%
    height 1px;
    max-width: 100%;
  }
}

div[tabindex="-1"] {
  &:focus {
    outline none;
  }
}
