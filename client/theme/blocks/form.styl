:global {
  class = form

  .{class} {
    border: 1px solid #e1e1e1;
    border-radius: 3px;
    padding: 24px;
    box-sizing: border-box;
    $m-clearfix();

    &__group {
      margin-bottom: 15px;
      position: relative;

      &--has-value {
        .{class}__label {
          height: 20px;
          line-height: 20px;
          font-size: 11px;
          color: #51BBBE;
        }
      }
    }

    &__control {
      position: relative;
      display: block;
      width: 100%;
      outline: none;

      input, textarea {
        width: 100%;
        padding: 20px 0 6px 0;
        box-sizing: border-box;
        color: #5f6368;
        font-size: 20px;
        border: none;
        border-bottom: 1px solid #DDD;
        background-color: transparent;
        background: -webkit-linear-gradient(bottom, #51BBBE 50%, #51BBBE 50%);
        background: linear-gradient(to top, #51BBBE 50%, #51BBBE 50%);
        background-position: left bottom;
        background-size: 0 1px;
        background-repeat: no-repeat;
        transition: all .2s ease-in-out;

        $m-placeholder({
          text-align: right,
          color: #DDD,
          font-size: 13px,
          font-weight: 200
        })
        &:hover, &:focus {
          border-color: #51BBBE;
        }
        &:focus {
          outline: none;
          background-position: left bottom;
          background-size: 100% 1px;
          $m-placeholder({
            color: transparent,
            font-size: 0
          })
        }
      }

      & [disabled] {

      }

      textarea {
        resize: none;
      }
    }
    &__control-clear {

      &:before {

      }
      &:hover {

        &:before {

        }
      }
    }
    &__control-input {

    }
    &__control-caption {

    }
    &__label {
      position: absolute;
      top: 0;
      left: 0;
      text-align: left;
      display: block;
      width: 100%;
      height: 52px;
      line-height: 72px;
      text-transform: uppercase;
      font-size: 13px;
      font-weight: 200;
      background: transparent;
      color: rgba(0,0,0,0.8);
      margin: 0 auto;
      cursor: text;
      transition: all .15s ease-in-out;

      &:before {

      }

      &--without-border {

      }
    }

    &__error {
      font-size: 12px;
      color: red;
      margin-top: 4px;
    }

    &__submit {
      $m-btn();
      float: right;

      input {

        &:focus {

        }
      }
    }

    &__button {

      input {

        &:focus {

        }
      }
    }
    &__modal-button {

      &:focus {

      }
    }
  }
}
